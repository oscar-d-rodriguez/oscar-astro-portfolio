   </head>
   <body>
      <div class="layout">
         {!hideMenu ? <Navigation client:load /> : null}
         <slot />
      </div>
      <div id="cursor" class="cursor-effect"></div>
      <canvas id="canvas" width="100%"></canvas>
      <script>
         (function () {
            const iframeId =
               new URL(location.href).searchParams.get("iframeId") ||
               "iframe-unknown";

            // Calculate full document height
            function getHeight() {
               const doc = document.documentElement;
               const body = document.body;
               return Math.max(
                  body.scrollHeight,
                  body.offsetHeight,
                  doc.clientHeight,
                  doc.scrollHeight,
                  doc.offsetHeight,
               );
            }

            // Post height to parent
            function sendHeight() {
               const h = getHeight();
               window.parent.postMessage(
                  { type: "iframe-height", iframeId, height: h },
                  "*",
               );
            }

            // Repeated measurement for slow DOM changes
            function repeatedHeightCheck() {
               let lastHeight = -1;
               let stableCount = 0;
               const maxAttempts = 12;
               const stableLimit = 3;

               const check = () => {
                  const h = getHeight();
                  sendHeight();
                  if (h === lastHeight) stableCount++;
                  else stableCount = 0;
                  lastHeight = h;
                  if (stableCount < stableLimit && stableCount < maxAttempts) {
                     requestAnimationFrame(() => setTimeout(check, 120));
                  }
               };

               check();
            }

            // Initial load + retries
            function initHeight() {
               repeatedHeightCheck();
               setTimeout(repeatedHeightCheck, 300);
               setTimeout(repeatedHeightCheck, 600);
               setTimeout(repeatedHeightCheck, 1000);
            }

            // Observe dynamic DOM changes
            new ResizeObserver(sendHeight).observe(document.body);
            new MutationObserver(sendHeight).observe(document.body, {
               childList: true,
               subtree: true,
            });

            // Listen for parent requesting height
            window.addEventListener("message", (e) => {
               if (e.data?.type === "get-height") sendHeight();
            });

            // React to window resize (e.g., CSS/layout changes)
            window.addEventListener("resize", sendHeight);

            // Run on load
            window.addEventListener("load", () => setTimeout(initHeight, 300));

            // In case document is already loaded
            if (
               document.readyState === "complete" ||
               document.readyState === "interactive"
            ) {
               setTimeout(initHeight, 300);
            }

            // Debugging
            setInterval(
               () => console.log("[iframe] height", getHeight()),
               1000,
            );
         })();
      </script>
   </body>
</html>
